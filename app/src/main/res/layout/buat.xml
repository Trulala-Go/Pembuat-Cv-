<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="#000000">

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="300dp"
         android:visibility="gone"
         android:background="#0f5655"
         android:orientation="vertical"
         android:id="@+id/liner">

        <LinearLayout
             android:layout_height="35dp"
             android:layout_width="match_parent"
             android:gravity="center_vertical"
             android:background="#555555">

            <TextView
                 android:layout_height="25dp"
                 android:layout_width="25dp"
                 android:layout_marginEnd="50dp"
                 android:background="#ff0000"
                 android:gravity="center"
                 android:text="X"
                 android:id="@+id/keluar" />

            <ImageView
                 android:layout_height="25dp"
                 android:layout_width="25dp"
                 android:src="@drawable/lihat"
                 android:id="@+id/lihat" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:background="#000000"
             android:orientation="vertical">

            <ImageView
                 android:layout_height="50dp"
                 android:layout_width="50dp"
                 android:src="@drawable/tambah"
                 android:background="#ffffff"
                 android:layout_margin="20dp"
                 android:id="@+id/foto"
                 android:layout_gravity="center_horizontal" />

            <ScrollView
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:layout_margin="10dp">

                <LinearLayout
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan nama"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/nama" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan Whatsapp"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/wa" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan No.Telp"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/nomor" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan Email"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/email" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan prefensi"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/prefensi" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan Domisili"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/domisili" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan Agama"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/agama" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan Umur"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/umur" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan Lulusan"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/lulusan" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan Tempat Tanggsl Lahir"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/ttl" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan SD"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/sd" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan SMP"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/smp" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan SMA"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/sma" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan Universitas"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/kuliah" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan Pengalaman"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/pengalamanSatu" />

                    <EditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:hint="Masukan Pengalaman"
                         android:layout_margin="10dp"
                         android:padding="10dp"
                         android:textColor="#afffff"
                         android:id="@+id/pengalamanDua" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:orientation="vertical">

        <LinearLayout
             android:layout_height="35dp"
             android:layout_width="match_parent"
             android:background="#667755"
             android:gravity="center_vertical">

            <ImageView
                 android:layout_height="25dp"
                 android:layout_width="25dp"
                 android:src="@drawable/nav"
                 android:layout_marginEnd="50dp"
                 android:id="@+id/nav" />

            <ImageView
                 android:layout_height="25dp"
                 android:layout_width="25dp"
                 android:src="@drawable/simpan"
                 android:id="@+id/simpan" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:layout_margin="10dp">

            <HorizontalScrollView
                 android:layout_height="match_parent"
                 android:layout_width="match_parent">

                <ScrollView
                     android:layout_height="match_parent"
                     android:layout_width="match_parent">

                    <LinearLayout
                         android:layout_height="match_parent"
                         android:layout_width="match_parent"
                         android:orientation="vertical"
                         android:id="@+id/utama">

                        <LinearLayout
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:gravity="center">

                            <ImageView
                                 android:layout_height="150dp"
                                 android:layout_width="100dp"
                                 android:background="#555555"
                                 android:layout_margin="10dp"
                                 android:id="@+id/foto_out" />

                            <LinearLayout
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:layout_margin="10dp"
                                 android:orientation="vertical">

                                <TextView
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:layout_marginBottom="10dp"
                                     android:background="#ffffff"
                                     android:textSize="17sp"
                                     android:textColor="#000000"
                                     android:layout_gravity="center_horizontal"
                                     android:id="@+id/nama_out" />

                                <LinearLayout
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:gravity="center"
                                     android:layout_margin="2dp">

                                    <ImageView
                                         android:layout_height="15dp"
                                         android:layout_width="15dp"
                                         android:src="@drawable/wa"
                                         android:background="#ffffff"
                                         android:layout_margin="10dp" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/wa_out" />

                                </LinearLayout>

                                <LinearLayout
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:gravity="center"
                                     android:layout_margin="2dp">

                                    <ImageView
                                         android:layout_height="15dp"
                                         android:layout_width="15dp"
                                         android:src="@drawable/email"
                                         android:background="#ffffff"
                                         android:layout_margin="10dp" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/email_out" />

                                </LinearLayout>

                                <LinearLayout
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:gravity="center"
                                     android:layout_margin="2dp">

                                    <ImageView
                                         android:layout_height="15dp"
                                         android:layout_width="15dp"
                                         android:src="@drawable/telpon"
                                         android:background="#ffffff"
                                         android:layout_margin="10dp" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/nomor_out" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:layout_margin="10dp"
                             android:orientation="vertical">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:background="#ffffff"
                                 android:textSize="15sp"
                                 android:textColor="#000000"
                                 android:textStyle="italic"
                                 android:text="INFO PREFENSI :" />

                            <LinearLayout
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:layout_margin="15dp">

                                <TextView
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:background="#ffffff"
                                     android:textSize="10sp"
                                     android:textColor="#000000"
                                     android:id="@+id/prefensi_out" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:layout_margin="10dp"
                             android:orientation="vertical">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:background="#ffffff"
                                 android:textSize="15sp"
                                 android:textColor="#000000"
                                 android:textStyle="italic"
                                 android:text="INFO PRIBADI :" />

                            <GridLayout
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:layout_margin="15dp">

                                <LinearLayout
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:layout_marginEnd="20dp"
                                     android:orientation="vertical">

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:text="Alamat Domisili" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:text="Agama" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:text="Umur" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:text="Lulusan" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:text="Tempat Tanggal Lahir" />

                                </LinearLayout>

                                <LinearLayout
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:orientation="vertical">

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/domisili_out" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/agama_out" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/umur_out" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/lulusan_out" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/ttl_out" />

                                </LinearLayout>

                            </GridLayout>

                        </LinearLayout>

                        <LinearLayout
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:layout_margin="10dp"
                             android:orientation="vertical">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:background="#ffffff"
                                 android:textSize="15sp"
                                 android:textColor="#000000"
                                 android:textStyle="italic"
                                 android:text="PENDIDIKAN :" />

                            <GridLayout
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:layout_margin="15dp">

                                <LinearLayout
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:layout_marginEnd="20dp"
                                     android:orientation="vertical">

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:text="SD" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:text="SMP" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:text="SMA" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:text="KULIAH" />

                                </LinearLayout>

                                <LinearLayout
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:orientation="vertical">

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/sd_out" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/smp_out" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/sma_out" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/kuliah_out" />

                                </LinearLayout>

                            </GridLayout>

                        </LinearLayout>

                        <LinearLayout
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:layout_margin="10dp"
                             android:orientation="vertical">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:background="#ffffff"
                                 android:textSize="15sp"
                                 android:textColor="#000000"
                                 android:textStyle="italic"
                                 android:text="PENGALAMAN :" />

                            <GridLayout
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:layout_margin="15dp"
                                 android:orientation="horizontal"
                                 android:columnCount="2">

                                <LinearLayout
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:layout_marginEnd="20dp"
                                     android:orientation="vertical">

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:text="Pengalaman 1" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:text="Pengalaman 2" />

                                </LinearLayout>

                                <LinearLayout
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:orientation="vertical">

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/pengalamanSatu_out" />

                                    <TextView
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content"
                                         android:background="#ffffff"
                                         android:layout_margin="2dp"
                                         android:textSize="10sp"
                                         android:textColor="#000000"
                                         android:id="@+id/pengalamanDua_out" />

                                </LinearLayout>

                            </GridLayout>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>